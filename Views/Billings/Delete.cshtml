@model hotel.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this billing?</h3>
    <p>Amount Due: @Model.AmountDue</p>
    <p>Billing Date: @Model.BillingDate</p>
    <p>Payment Method: @Model.PaymentMethod</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Billings")" class="btn btn-secondary">Cancel</a>
</form>
