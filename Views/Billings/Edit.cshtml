@model hotel.Models.Billing

@{
    ViewData["Title"] = "Edit Billing";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AmountDue" class="control-label"></label>
        <input asp-for="AmountDue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BillingDate" class="control-label"></label>
        <input asp-for="BillingDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod" class="control-label"></label>
        <input asp-for="PaymentMethod" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
