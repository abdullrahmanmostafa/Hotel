@model hotel.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <h3 class="mb-3">Are you sure you want to delete this guest?</h3>
    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
</div>

<form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-between">
    <input type="hidden" asp-for="Id" />
    <div>
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a href="@Url.Action("Index", "Guests")" class="btn btn-secondary btn-lg ms-3">Cancel</a>
    </div>
</form>
