@model hotel.Models.RoomAvailability

@{
    ViewData["Title"] = "Create Room Availability";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoomId" class="control-label"></label>
        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>
