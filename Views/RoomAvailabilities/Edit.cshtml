@model hotel.Models.RoomAvailability

@{
    ViewData["Title"] = "Edit Room Availability";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="RoomId" class="control-label"></label>
        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.roomid"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
</form>
