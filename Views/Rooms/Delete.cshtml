@model hotel.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<h4 class="text-center mb-3">Are you sure you want to delete this room?</h4>
<hr />

<div class="dl-horizontal">
    <div class="row mb-3">
        <div class="col-md-3"><strong>Name:</strong></div>
        <div class="col-md-9">@Model.Name</div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3"><strong>Type:</strong></div>
        <div class="col-md-9">@Model.Type</div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3"><strong>Price:</strong></div>
        <div class="col-md-9">@Model.Price</div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
}
