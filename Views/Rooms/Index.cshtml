@model IEnumerable<hotel.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">Create New Room</a>
</p>

<table class="table table-bordered table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Type</td>
                <td>@room.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = room.Id })" class="btn btn-warning btn-sm">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = room.Id })" class="btn btn-danger btn-sm">Delete</a> |
                    <a href="@Url.Action("Details", new { id = room.Id })" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
