@model hotel.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <h3 class="mb-3">Are you sure you want to delete this booking?</h3>
    <p><strong>Room:</strong> @Model.Room.Name</p>
    <p><strong>Guest:</strong> @Model.Guest.FullName</p>
    <p><strong>Check-in Date:</strong> @Model.CheckInDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Check-out Date:</strong> @Model.CheckOutDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post" asp-route-Id="@Model.Id">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a href="@Url.Action("Index", "Bookings")" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</form>
