@model hotel.Models.Service

@{
    ViewData["Title"] = "Edit Service";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter service name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter service price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Save</button>
    <a href="@Url.Action("Index", "Services")" class="btn btn-secondary btn-lg">Cancel</a>
</form>
