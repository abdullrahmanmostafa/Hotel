<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/hotel.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* تغيير خلفية الصفحة */
        body {
            background: linear-gradient(135deg, #1e2a47, #6a4e7d);
            color: #f0f0f0;
            font-family: 'Arial', sans-serif;
        }

        /* تخصيص الـ navbar */
        nav {
            background-color: #343a40;
        }

        .navbar-brand, .nav-link {
            color: #f0f0f0 !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #ffc107 !important;
            }

        /* تخصيص الأزرار */
        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-primary:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        /* تخصيص الحقول */
        .form-control {
            background-color: #3e4b67;
            color: #f0f0f0;
            border: 1px solid #5a6376;
        }

            .form-control:focus {
                background-color: #3e4b67;
                color: #f0f0f0;
                border-color: #6a4e7d;
                box-shadow: 0 0 5px rgba(106, 78, 125, 0.5);
            }

        /* تخصيص العناوين */
        h1, h2, h3 {
            color: #f0f0f0;
        }

        .alert {
            background-color: #ff6347;
            color: #fff;
        }

            .alert a {
                color: #fff;
            }

        /* تخصيص التنسيق */
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">Hotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownRooms" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Rooms
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownRooms">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Rooms" asp-action="Index">Room List</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Rooms" asp-action="Create">Create Room</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownBookings" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Bookings
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownBookings">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Bookings" asp-action="Index">Booking List</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Bookings" asp-action="Create">Create Booking</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownServices" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownServices">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Index">Service List</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Create">Create Service</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Guests" asp-action="Create">Add Guest</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted text-center">
        <div class="container">
            &copy; 2024 - Hotel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
